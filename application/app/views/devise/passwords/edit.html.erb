<h2 class="text-center mb-4">Zmień swoje hasło</h2>

<div class="d-flex justify-content-center">
  <div class="card" style="width: 30rem;">
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group mb-3">
          <%= f.label :password, "Nowe hasło", class: "control-label" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> znaków minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, "Potwierdź nowe hasło", class: "control-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Zmień hasło", class: "btn btn-primary", data: { turbo: false } %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
